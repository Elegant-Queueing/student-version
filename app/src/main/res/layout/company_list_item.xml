<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:maxHeight="100dp"
    android:minHeight="100dp"
    android:padding="@dimen/default_margin"
    android:focusable="true"
    android:clickable="true"
    android:background="?attr/selectableItemBackground" >

    <ImageView
        android:id="@+id/compnay_picture"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/company_name"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitCenter"
        android:src = "@drawable/ic_account_circle_black_24dp"/>

    <TextView
        android:id="@+id/company_name"
        app:layout_constraintStart_toEndOf="@id/compnay_picture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/compnay_desc"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_width="0dp"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/compnay_desc"
        app:layout_constraintStart_toEndOf="@id/compnay_picture"
        app:layout_constraintTop_toBottomOf="@id/company_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textColor="@color/black"
        android:alpha=".6"
        android:fontFamily="sans-serif"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:scrollHorizontally="false"
        />


</androidx.constraintlayout.widget.ConstraintLayout>